{
  "version": 2,
  "builds": [
    {
      "src": "api/backend.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.9",
        "maxLambdaSize": "15mb",
        "installCommand": "pip install -r requirements.txt"
      }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/vite",
      "config": {
        "root": "frontend"
      }
    }
  ],
  "rewrites": [
    { 
      "source": "/api/(.*)",
      "destination": "/api/backend.py"
    },
    { 
      "source": "/(.*)", 
      "destination": "/$1"
    }
  ]
}