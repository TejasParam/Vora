{
  "version": 2,
  "builds": [
    {
      "src": "api/*.py",
      "use": "now-python@3.1.0"
    },
    {
      "src": "frontend/*",
      "use": "@vercel/static"
    }
  ],
  "outputDirectory": "frontend/dist",
  "buildCommand": "cd frontend && npm install && npm run build",
  "installCommand": "cd frontend && npm install",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1.py"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ]
}
