{
  "version": 2,
  "functions": {
    "api/**": {
      "runtime": "python3.9",
      "excludeFiles": "{.next,*.cache,node_modules,public,app}/**",
      "maxDuration": 10
    }
  },
  "outputDirectory": "frontend/dist",
  "buildCommand": "cd frontend && npm install && npm run build",
  "installCommand": "npm install",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/backend/backend.py"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ]
} 