{
  "version": 2,
  "builds": [
    {
      "src": "api/backend.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    { 
      "source": "/api/(.*)",
      "destination": "api/backend.py"
    },
    { 
      "source": "/(.*)", 
      "destination": "/" 
    }
  ]
}